/* pages/user/user.wxss */
page {
  background: #fafafa;
}
/*新消息进来提醒*/
.new-msg{
  position:fixed;
  top:10rpx;
  left:10rpx;
  right:10rpx;
  height:70rpx;
  line-height: 70rpx;
  font-size:12px;
  z-index:99;
  margin: auto;
  text-align: center;
  background: #e8e8e8;
  border: 1rpx solid #dedede;
  border-radius: 30rpx;
  opacity:0.9;
}
.headImg {
  width: 750rpx;
  height: 750rpx;
  background-color: #fbfbfb;
  background-size: 100% 100%;
  background-position: center center;
}
.info {
  position: relative;
  font-size: 24rpx;
  color: #8c8c8c;
  border-bottom: 2rpx solid #e8e8e8;
  background: #fff;
}
.info-name {
  font-size: 40rpx;
  color: #000;
}
.info-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  border: 4rpx solid #3eb4ff;
  font-size: 24rpx;
  color: #3eb4ff;
}

.game {
  background: #fff;
}
.game-title {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #acacac;
}
.game-box {
  font-size: 0;
  overflow: hidden;
}
.game-item {
  width:31.33%;
  margin: 0 1%; 
  overflow: hidden;
}
.game-item:nth-child(3n+1) .game-item-state {
  background: -webkit-linear-gradient(left,#c43bb4,#4f13d4); 
  background: linear-gradient(left,#c43bb4,#4f13d4); 
}
.game-item:nth-child(3n+2) .game-item-state {
  background: -webkit-linear-gradient(left,#4293ea,#5ecd80); 
  background: linear-gradient(left,#4293ea,#5ecd80);
}
.game-item:nth-child(3n+3) .game-item-state {
  background: -webkit-linear-gradient(left,#3251f6,#50adf4); 
  background: linear-gradient(left,#3251f6,#50adf4);
}
.game-item-img {
  height: 222rpx;
}
.game-item-state {
  height: 80rpx;
  color: #fff;
  background: #e26d35;
  overflow: hidden;
  -webkit-border-bottom-right-radius: 10rpx;
  -webkit-border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.game-item-state .title {
  height: 50rpx;
  font-size: 30rpx;
}
.game-item-state .state {
  height: 30rpx;
  font-size: 24rpx;
  opacity: 0.6;
}

.btn {
  position: relative;
  margin-top: 20rpx;
  background: #fff;
}
.btn-set {
  color: #000;
  font-size: 24rpx;
}
.btn-title {
  font-size: 36rpx;
  color: #000;
}
.btn-icon {
  width: 22rpx;
  height: 40rpx;
  margin-top: 6rpx;
}
.btn-back {
  margin: 0 auto;
  font-size: 28rpx;
  color: #000;
  border: 2rpx solid #e8e8e8;
}