.foot {
  position: fixed;
  bottom: 40rpx;
  right: 0;
  left: 0;
  z-index: 3;
  margin: auto;
}
.swiper {
  width: 25%;
}
.foot .state {
  margin: 0 auto;
  font-size: 30rpx;
  font-weight: bold;
  color: #6e879c;
}

.foot .state .btn-state {
  width: 32rpx;
  height: 20rpx;
  margin: 0 10rpx;
}

.maskBox {
  margin: 50% 10% 0;
  padding-bottom: 20rpx; 
  background: #fff;
  font-size: 28rpx;
}

.maskBox-title {
  font-size: 32rpx;
}
.maskBox-item .subBox {
  height: 50rpx;
  border: 2rpx solid #000;
  overflow: hidden;
}
.maskBox-item .subBox-item {
  margin-left: -2rpx;
  font-size: 28rpx;
  color: #000;
  border-left: 2rpx solid #000; 
  border-right: 2rpx solid #000; 
  -webkit-border-radius: 0;
  border-radius: 0;
}
.maskBox-item .subBox-item:nth-child(1){
  border-left: none;
}
.maskBox-item .subBox-item:nth-last-child(1){
  border-right: none;
}
.maskBox-item .subBox-item.active {
  background: #ffec02;
}
.maskBox-btn {
  margin: 40rpx auto;
  -webkit-border-radius: 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fff;
  background: #fa2b55;
}

/*配对动画*/
@keyframes userAni{
  0% {
    opacity: 0;
    margin-right: 50%;
  }
  4% {
    opacity: 1;
    margin-right: -10rpx;
  }
  99% {
    opacity: 1;
    margin-right: -10rpx;
  }
  100% {
    opacity: 0;
    margin-right: -10rpx;
  }
}
@keyframes otherAni{
  0% {
    opacity: 0;
    margin-left: 50%;
  }
  4% {
    opacity: 1;
    margin-left: -10rpx;
  }
  99% {
    opacity: 1;
    margin-left: -10rpx;
  }
  100% {
    opacity: 0;
    margin-left: -10rpx;
  }
}

/*匹配按钮背景动画*/
@keyframes btnAni1 {
  0% {
    opacity: 0;
    transform: scale(1); 
  }
  16% {
    opacity: 0.5;
    transform: scale(2.5);
  }
  48% {
    opacity: 0;
    transform: scale(5); 
  }
  100% {
    opacity: 0;
    transform: scale(1); 
  }
}
@keyframes btnAni2 {
  0% {
    opacity: 0;
    transform: scale(1); 
  }
  16% {
    opacity: 0.5;
    transform: scale(2);
  }
  48% {
    opacity: 0;
    transform: scale(3); 
  }
  100% {
    opacity: 0;
    transform: scale(1); 
  }
}
@keyframes btnAni3 {
  0% {
    opacity: 0;
    transform: scale(1); 
  }
  16% {
    opacity: 0.5;
    transform: scale(1.5);
  }
  48% {
    opacity: 0;
    transform: scale(2); 
  }
  100% {
    opacity: 0;
    transform: scale(1); 
  }
}