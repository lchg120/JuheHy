/*新消息进来提醒*/
.new-msg{
  position:fixed;
  top:10rpx;
  left:10rpx;
  right:10rpx;
  height:70rpx;
  line-height: 70rpx;
  font-size:12px;
  z-index:99;
  margin: auto;
  text-align: center;
  background: #e8e8e8;
  border: 1rpx solid #dedede;
  border-radius: 30rpx;
  opacity:0.9;
}
.main {
  position: relative;
  height: calc(100% - 320rpx);
}
.btn-bgBox {
  position: absolute;
  top: 1000rpx;
  right: 0;
  bottom: 0px; 
  left: 0;
  z-index: 2;
  margin: auto;
  width: 600rpx;
  height: 600rpx;
  overflow: hidden;
}
.btn-start {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 3;
  margin: auto;
  width: 160rpx;
  height: 160rpx;
}
swiper-item {
  transform:translate(0%, 0px) translateZ(0px);
}
.btn-bg {
  width: 160rpx;
  height: 160rpx;
  opacity: 0;
  background: #fff;
}
.btn-bg.ani1 {
  animation: btnAni1 3s linear infinite 2s;  
}
.btn-bg.ani2 {
  animation: btnAni2 3s linear infinite 2.1s;  
}
.btn-bg.ani3 {
  animation: btnAni3 3s linear infinite 2.3s;  
}
swiper-item {
  width: 25%;
}

.top {
  background: #fff;
  width: 750rpx;
  height: 260rpx;
}
.top-keyText {
  position: absolute;
  left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #dedede;
}
.main-box {
  height: 70%;
}
.userBox {
  overflow: hidden;
}
.user-item {
  position: relative;
  padding: 0rpx 2.5% 0;
  font-size: 20rpx;
  vertical-align: top;
}
.icon-triangle {
  position: absolute;
  top: 54rpx;
  right: 0;
  left: 0;
  z-index: 1;
  margin: auto;
  border-color: #666f7f transparent transparent transparent;
}
.user-item button {
  position: absolute;
  top: 20rpx;
  right: 0;
  left: 0;
  z-index:2;
  margin: auto;
  padding: 5rpx 0rpx;
  font-size: 24rpx;
  background: #666f7f;
}
.user-item-head {
  width: 80rpx;
  height: 80rpx;
  margin: 80rpx auto 0;

}
.user-item-name {
  margin: 10rpx 0;
  color: #5a5a5a;
}
.user-item-name text:nth-child(1) {
  display: block;
  width: 100rpx; 
  height: 30rpx;
  overflow: hidden;
  text-align: center;
}
.user-item-sex {
  width: 24rpx;
  height: 24rpx;
}
.user-item-record {
  border: 2rpx solid #aaaaaa;
  color: #aaaaaa;
}
.userNum {
  padding: 40rpx 0 0;
  font-size: 32rpx;
  font-weight: bold;
}
.userNum text {
  padding: 0 20rpx;
  font-size: 60rpx;
}
.con {
  font-size: 32rpx;
  color: #353535;
  font-weight: bold;
}

.box {
  height: 100%;
  padding: 0 100rpx;
}
.box .random {
  height: 100%;
  border: 2rpx solid transparent;
}
.box .random:nth-child(1) {}
.box .random:nth-child(2) {}
.box .random:nth-child(3) {}
.box .random:nth-child(4) {}
.box .random:nth-child(5) {}

.random-item {
  position: relative;
  height: 24%;
}
.random-item.active {
  height: 15%;
}
.random-item-data {
  position: absolute;
  height: 60rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #5e7285;
  opacity: 0;
}
.random-item-data.user {
  left: 0%;
  z-index: 2;
}
.random-item-data.other {
  right: 0%;
  z-index: 1;
} 
.random-item-data .name {
  position:absolute;
  width:200rpx;
  height: 30rpx;
  line-height: 30rpx;
  overflow: hidden;
}
.random-item-data.user .name {
  right:50rpx;
}
.random-item-data.other .name {
  left:50rpx;
}
.random-item-data .head {
  border: 2rpx solid #fff;
  width: 40rpx;
  height: 40rpx;
  position:absolute;
}
.random-item-data.user .head {
  right:0;
}
.random-item-data.other .head {
  left:0;
}


