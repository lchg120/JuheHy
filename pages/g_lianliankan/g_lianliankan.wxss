}
.title-sub {
  color: #464545;
  font-size: 28rpx;
}
.tips text {
  color: #ff3e3e;
}
.tips-bg {
  width: 400rpx;
  height: 120rpx;
  margin: 10rpx auto;
}
.bgactive{
  background: #ccc;
}
