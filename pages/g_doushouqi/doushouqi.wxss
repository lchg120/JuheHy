/* pages/g_doushouqi/doushouqi.wxss */
button {
  position: initial;
}
.doushouqi {
  position: relative;
}
.bg-top {
  height: 120rpx;
  margin: auto;
  padding: 0 56rpx;
}
.user, .other {
  position: relative;
  z-index: 1;
  width: 92rpx;
}
.header {
  width: 80rpx;
  height: 80rpx;
}
.user .header {
  border: 6rpx solid #f82c54;
}
.other .header {
  border: 6rpx solid #0076ff;
}
.name {
  position: absolute;
  bottom: 0;
  z-index: 1;
  width: 160rpx;
  color: #fff;
  font-size: 20rpx;
  background: #603521;
}
.user .name {
  left: 86rpx;
  text-align: left;
}
.other .name {
  right: 86rpx;
  text-align: right;
}
.huihe {
  position: absolute;
  top: 6rpx;
  width: 300rpx;
  height: 60rpx;
}
.user .huihe {
  left: 96rpx;
}
.other .huihe {
  right: 96rpx;
}
.huihe-time {
  color: #fff;
  text-indent: 10rpx;
  font-size: 28rpx;
}

.huihe-time text:nth-child(1) {
  color: #fff;
  font-size: 40rpx;
  text-shadow: 0 -4rpx 10rpx #000;
}

.help {
  position: relative;
  height: 60rpx;
  margin-top: 110rpx;
}
.help-btn {
  position: absolute;
  top: -60rpx;
  left: 20rpx;
  width: 50rpx;
  height: 50rpx;
  background-position: 50% 50%;
  background-color: #ff8c1b;
  background-size: 60% 60%;
}
.lose-btn {
  width: 150rpx;
  height: 60rpx;
}
.sum-btn {
  width: 150rpx;
  height: 60rpx;
}

.game {
  height: 500rpx;
  margin: 100rpx auto;
}
.game-item {
  position: relative;
  z-index: 1;
  width: 120rpx;
  height: 96rpx;
  margin-top: 36rpx;
  -webkit-border-radius: 10rpx;
  border-radius: 10rpx;
  background: #4aab62; 
}
.game-item:nth-child(1),.game-item:nth-child(2),.game-item:nth-child(3),.game-item:nth-child(4) {
  margin-top: 0;
}

/*游戏区域*/
.game-item {}
.game-item-line {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 85%;
  height: 85%;
  background-image: -webkit-linear-gradient(left, #c6c79f, #897080);  
  background-image: linear-gradient(90deg, #c6c79f, #897080); 
  -webkit-border-radius: 10rpx;
  border-radius: 10rpx;

}
.game-item-line.active {
  margin-top: -30rpx;
  border: 6rpx solid #fe9703;
}
.game-item-bottom {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  margin: auto;
  width: 80%;
  height: 85%;
  background: #ffffff;
  -webkit-border-radius: 10rpx;
  border-radius: 10rpx;
}
.game-item.user .game-item-bottom.active {
  background: #2c74f8;
}
.game-item.other .game-item-bottom.active {
  background: #f72c54;
}
.game-item-box {
  position: absolute;
  top: -30%;
  right: 0;
  left: 0;
  z-index: 2;
  margin: auto;
  width: 90%;
  height: 100%;
}
.game-item-name {
  position: absolute;
  right: 0;
  left: 0;
  bottom: 0rpx;
  z-index: 3;
  margin: auto;
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  padding: 4rpx;
  text-align: center;
  font-size: 20rpx;
  background: #e2aa64;
  color: #fff;
  border: 2rpx solid #fff;
}
.game-item.user .game-item-name {
  background: #2c74f8;
}
.game-item.other .game-item-name {
  background: #f72c54;
}
.game-item-direction {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  z-index: 4;
  background: transparent;
}

/*箭头*/
.direction {
  position: absolute;
  margin: auto;
  width: 30rpx;
  height: 24rpx;
}


.direction.top {
  top: -30rpx;
  right: 0;
  left: 0;
  -webkit-transform: rotate(180deg); 
  transform: rotate(180deg);
}
.direction.right {
  top: 0;
  right: -30rpx;
  bottom: 0;
  -webkit-transform: rotate(270deg); 
  transform: rotate(270deg);
}
.direction.bottom {
  right: 0;
  bottom: -30rpx;
  left: 0;
  -webkit-transform: rotate(0deg); 
  transform: rotate(0deg);
}
.direction.left {
  top: 0;
  bottom: 0;
  left: -30rpx;
  -webkit-transform: rotate(90deg); 
  transform: rotate(90deg);
}

/*提示*/
.tips {
  height: 60rpx;
  margin: auto;
  -webkit-border-radius: 40rpx;
  border-radius: 40rpx;
  background-color: rgba(0,0,0,0.5); 
}
.tips-bg {
  margin: auto;
}


