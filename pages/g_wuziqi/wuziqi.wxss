/**index.wxss**/
page {
  background: #000000;
  overflow: hidden;
}
.user-vs {
  position: relative;
  font-size: 30rpx;
  color: #fff;
  height: 260rpx;
}
.tips {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff7e00;
  background-size: 75% 75%;
  background-position: 50% 50%;
}

.userHead, .otherHead {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}
.userHead {
  border: 8rpx solid #3fc2ff;
}
.otherHead {
  border: 8rpx solid #ff3f87;
}

.userHuihe, .otherHuihe {
  position: absolute;
  top: 44rpx;
  z-index: 1;
  width: 200rpx;
  height: 70rpx;
  vertical-align: bottom;
}
.userHuihe {
  left: 150rpx;
}
.otherHuihe {
  right: 150rpx;
}

.userName, .otherName {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  background: rgba(0,0,0,0.5);
}
.userName {
  text-align: left;
}
.otherName {
  text-align: right;
}




.game-yuan {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  background:  red;
}
.infoBox-time {
  width: 140rpx;
  height: 50rpx;
  line-height: 25rpx;
  font-size: 24rpx;
  text-align: center;
}
.infoBox-time-width {
  width: 100%;
  height: 100%;
  margin-bottom: 10rpx;
  background-image: -webkit-linear-gradient(left, #ff2800, yellow, #00ff00);  
  background-image: linear-gradient(90deg, #ff2800, yellow, #00ff00); 
  overflow: hidden;
}
.infoBox-time-icon {
  width: 100%;
  height: 100%;
  background: #fff; 
}

.btnBox {
  margin: 30rpx auto 0;
  height: 60rpx;
  color: #000;
}
.btn-back, .btn-sum, .btn-lose, .btn-confirm {
  width: 167.5rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin: 10rpx;
  font-size: 32rpx;
  -webkit-border-radius: 20rpx;
  border-radius: 20rpx;
}

.mask-con {
  width: 500rpx;
  height: 500rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: justify;
  color: #333;
  background: #fff;
}
.mask-con .font-red {
  color: red;
}
.mask-bg {
  width: 300rpx;
  height: 280rpx;
  margin: 20rpx auto;
}

