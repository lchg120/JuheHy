  margin-top:26rpx;
}
.extra .user-lv {
  font-weight:bold
}

.item-head-item {
  width: 24rpx;
  height: 24rpx;
  background-color: gray;
  background: #000;
  opacity: 0.3;
}

.view-game{
  position: relative;
  z-index: 9
}
.gameBox {
  position: absolute;
  top: 108px;
  right: 0;
  left: 0;
  margin: auto;
  z-index: 1;
  width: 750rpx;
  height: 890rpx;
}
.title {
  height: 40rpx;
  padding-top: 40rpx;
}
.title-bg {
  width: 40rpx;
  height: 40rpx;
}
.title-text {
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #5f261a;
  font-weight: bold;
}

.old-qizi, .move-qizi{
  position: absolute;
  z-index: 19;
  width: 25px;
  height: 25px;
  background-size: 25px 25px;
}
.move-qizi.btnRed {
  -webkit-box-shadow: 0 0 80rpx #f51238;
  animation: btnRed 1s infinite;
}
@-webkit-keyframes btnRed {
  0% { -webkit-box-shadow: 0 0 40rpx #0338fd; }
  50% { -webkit-box-shadow: 0 0 80rpx #f51238; }
  100% { -webkit-box-shadow: 0 0 40rpx #0338fd; }
}



.draw-qizi{
  position: absolute;
  z-index: 9;
  width: 25px;
  height: 25px;
  background-size: 25px 25px;
}



.table {
  border:1px solid #561a00;
  border-right: 0;
  border-bottom: 0;
}
.tr {
  /* width: 100%; */
  display: flex;
  
}
.td {
  border-bottom: 1px solid #561a00;
  border-right: 1px solid #561a00;
}